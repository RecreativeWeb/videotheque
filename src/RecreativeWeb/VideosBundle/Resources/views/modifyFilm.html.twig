{% extends '::backend.html.twig' %}

{% block section %}

	{{ form_start(form_film) }}
	<fieldset>
		<legend>Modification d'une fiche film</legend>
		{{ form_row(form_film.titre) }}
		{{ form_row(form_film.genre) }}
		{{ form_row(form_film.annee) }}
